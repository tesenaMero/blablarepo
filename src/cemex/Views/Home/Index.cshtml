@{
    ViewData["Title"] = "Home Page";
    ViewData["API_HOST"] = Environment.GetEnvironmentVariable("API_HOST");
    ViewData["API_HOST_FULL"] = Environment.GetEnvironmentVariable("API_HOST_FULL");
    ViewData["API_ORG"] = Environment.GetEnvironmentVariable("API_ORG");
    ViewData["API_ENV"] = Environment.GetEnvironmentVariable("API_ENV");
    ViewData["APP_CODE"] = Environment.GetEnvironmentVariable("APP_CODE");
    ViewData["CLIENT_ID"] = Environment.GetEnvironmentVariable("CLIENT_ID");
    <!-- ViewData["PAYMENT_URL_QA"] =    ;
    ViewData["PAYMENT_URL_DEV"] = Environment.GetEnvironmentVariable("CLIENT_ID"); -->
}

